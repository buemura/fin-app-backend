{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf node_modules",
    "clean:deep": "rimraf dist && rimraf node_modules",
    "clean:prod": "rimraf src && npm prune --production",
    "postinstall": "prisma generate",
    "studio:dev": "prisma studio --schema=prisma/schema.dev.prisma",
    "studio:prod": "prisma studio --schema=prisma/schema.prod.prisma",
    "postinstall:dev": "prisma generate --schema=prisma/schema.dev.prisma",
    "postinstall:prod": "prisma generate --schema=prisma/schema.prod.prisma",
    "migrate": "prisma db push",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint --color",
    "lint:fix": "eslint --fix --color",
    "prebuild": "rimraf dist",
    "build": "npm run postinstall:prod && tsc --project tsconfig.build.json",
    "build:tsup": "tsup src",
    "start": "npm run postinstall:dev && node dist/src/main/index.js",
    "start:dev": "npm run postinstall:dev && tsnd src/main/index.ts",
    "start:prod": "npm run postinstall:prod && pm2 start ecosystem.config.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "bcrypt": "^5.1.0",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.15.0",
    "ioredis": "^5.3.1",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.2.6",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^18.11.11",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "5.48.2",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "prisma": "^4.11.0",
    "rimraf": "^4.1.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsup": "^6.5.0",
    "tsx": "^3.12.2",
    "typescript": "*"
  }
}
